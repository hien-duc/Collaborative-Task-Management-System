<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">Admin Panel</h5>
    </div>
    <div class="card-body p-0">
        <div class="list-group list-group-flush">
            <a href="@Url.Action("Dashboard", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>
            <a href="@Url.Action("Users", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"].ToString() == "Users" ? "active" : "")">
                <i class="bi bi-people me-2"></i> Users
            </a>
            <a href="@Url.Action("AuditLogs", "Admin")" class="list-group-item list-group-item-action @(ViewContext.RouteData.Values["action"].ToString() == "AuditLogs" ? "active" : "")">
                <i class="bi bi-journal-text me-2"></i> Audit Logs
            </a>
        </div>
    </div>
</div>