@model Collaborative_Task_Management_System.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Admin Sidebar -->
        <div class="col-md-2 mb-4">
            @await Html.PartialAsync("_AdminSidebar")
        </div>
        
        <!-- Main Content -->
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h2>Edit User</h2>
                </div>
                <div class="card-body">
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" required />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label">Full Name</label>
                            <input asp-for="FullName" class="form-control" required />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Roles</label>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="adminRole" name="Roles" value="Admin" 
                                       @(Model.Roles.Contains("Admin") ? "checked" : "") />
                                <label class="form-check-label" for="adminRole">Admin</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="managerRole" name="Roles" value="Manager" 
                                       @(Model.Roles.Contains("Manager") ? "checked" : "") />
                                <label class="form-check-label" for="managerRole">Manager</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="teamMemberRole" name="Roles" value="Team Member" 
                                       @(Model.Roles.Contains("Team Member") ? "checked" : "") />
                                <label class="form-check-label" for="teamMemberRole">Team Member</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="Users" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}