@model Collaborative_Task_Management_System.Models.TaskItem
@inject Collaborative_Task_Management_System.Services.ITagServiceWithUoW TagService
@inject Collaborative_Task_Management_System.Services.ITaskChecklistItemServiceWithUoW ChecklistService

@{
    ViewData["Title"] = "Edit Task";
    var tags = await TagService.GetTagsByTaskIdAsync(Model.Id);
    var checklistItems = await ChecklistService.GetChecklistItemsByTaskIdAsync(Model.Id);
}

<h1>Edit Task</h1>

<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProjectId" />
    
    <div class="row">
        <div class="col-md-8">
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">Tags</label>
                <input type="text" id="tags-input" class="form-control" value="@string.Join(", ", tags.Select(t => t.Name))" />
                <div id="tags-container" class="mt-2">
                    @foreach (var tag in tags)
                    {
                        <input type="hidden" name="tags[]" value="@tag.Name" />
                    }
                </div>
                <small class="form-text text-muted">Enter tags separated by commas</small>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">Checklist</label>
                <div id="checklist-container">
                    @foreach (var item in checklistItems.OrderBy(i => i.Position))
                    {
                        <div class="input-group mb-2">
                            <input type="text" name="checklistItems[]" class="form-control" value="@item.Description" />
                            <button type="button" class="btn btn-outline-danger remove-checklist-item">Remove</button>
                        </div>
                    }
                </div>
                <button type="button" id="add-checklist-item" class="btn btn-sm btn-outline-primary mt-2">Add Item</button>
            </div>
            
            <div class="form-group mb-3">
                <label class="control-label">Attachment</label>
                <input type="file" name="attachment" class="form-control" />
                <small class="form-text text-muted">Leave empty to keep the current attachment</small>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" type="date" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="Priority" class="form-control">
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                    <option value="Urgent">Urgent</option>
                </select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="@TaskStatus.InProgress">In Progress</option>
                    <option value="@TaskStatus.Blocked">On Hold</option>
                    <option value="@TaskStatus.Completed">Completed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="AssignedToId" class="control-label">Assigned To</label>
                <select asp-for="AssignedToId" class="form-control" asp-items="ViewBag.Users"></select>
                <span asp-validation-for="AssignedToId" class="text-danger"></span>
            </div>
        </div>
    </div>
    
    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@Model.ProjectId" class="btn btn-secondary">Back to Project</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(function() {
            // Tags input handling
            $('#tags-input').on('change', function() {
                const tagsContainer = $('#tags-container');
                tagsContainer.empty();
                
                const tagNames = $(this).val().split(',');
                tagNames.forEach(function(tagName) {
                    const trimmedTag = tagName.trim();
                    if (trimmedTag) {
                        tagsContainer.append(`<input type="hidden" name="tags[]" value="${trimmedTag}" />`);
                    }
                });
            });
            
            // Add checklist item
            $('#add-checklist-item').on('click', function() {
                const checklistContainer = $('#checklist-container');
                checklistContainer.append(`
                    <div class="input-group mb-2">
                        <input type="text" name="checklistItems[]" class="form-control" placeholder="Checklist item" />
                        <button type="button" class="btn btn-outline-danger remove-checklist-item">Remove</button>
                    </div>
                `);
            });
            
            // Remove checklist item
            $(document).on('click', '.remove-checklist-item', function() {
                $(this).closest('.input-group').remove();
            });
        });
    </script>
}