@{
    ViewData["Title"] = "Locked out";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4 text-center">
                    <div class="mb-4">
                        <i class="bi bi-lock-fill text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h3>Account Locked</h3>
                    <p class="mb-4">
                        This account has been locked out, please try again later or contact an administrator.
                    </p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>