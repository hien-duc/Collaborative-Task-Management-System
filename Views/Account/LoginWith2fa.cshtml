@model Collaborative_Task_Management_System.Models.LoginWith2faViewModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4">
                    <p class="text-info mb-4">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
                    <form method="post" asp-controller="Account" asp-action="LoginWith2fa" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <input asp-for="RememberMe" type="hidden" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="TwoFactorCode" class="form-label">Authenticator Code</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                                <input asp-for="TwoFactorCode" class="form-control" autocomplete="off" placeholder="Enter your authenticator code" />
                            </div>
                            <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
                        </div>
                        <div class="mb-3 form-check">
                            <input asp-for="RememberMachine" class="form-check-input" />
                            <label asp-for="RememberMachine" class="form-check-label">Remember this machine</label>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}