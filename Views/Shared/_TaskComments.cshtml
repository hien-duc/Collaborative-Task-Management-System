@model TaskItem

<div class="card mt-3">
    <div class="card-header">
        <h5 class="card-title mb-0">Comments</h5>
    </div>
    <div class="card-body">
        <!-- Comment Form -->
        <form asp-controller="Comments" asp-action="Create" method="post" class="mb-4 comment-form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="TaskId" value="@Model.Id" />
            <div class="form-group">
                <textarea name="Content" class="form-control" rows="3" maxlength="1000"
                          placeholder="Add a comment..." required
                          aria-label="Add comment for task @Model.Title"></textarea>
                <small class="text-muted d-flex justify-content-end">Max 1000 characters</small>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-chat-dots"></i> Post Comment
                </button>
            </div>
        </form>

        <!-- Comments List -->
        <div class="comments-container">
            @if (Model.Comments != null && Model.Comments.Any())
            {
                foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                {
                    <div class="card mb-2" role="article" aria-label="Comment by @(comment.User?.FullName ?? comment.User?.UserName)">
                        <div class="card-body py-2 px-3">
                            <p class="mb-1">@comment.Text</p>
                            <small class="text-muted">
                                @(comment.User?.FullName ?? comment.User?.UserName) - @comment.CreatedAt.ToString("MM/dd/yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-muted">
                    <p>No comments yet</p>
                </div>
            }
        </div>
    </div>
</div>