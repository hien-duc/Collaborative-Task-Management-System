@using Microsoft.AspNetCore.Identity
@using Collaborative_Task_Management_System.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="d-flex align-items-center">
@if (SignInManager.IsSignedIn(User))
{
    <div class="user-profile-wrapper me-3 d-flex align-items-center">
        <a class="user-profile-link d-flex align-items-center" href="#" title="Manage">
            <div class="user-avatar me-2">
                <i class="bi bi-person-circle" aria-hidden="true"></i>
            </div>
            <span class="user-name">@User.Identity?.Name</span>
        </a>
    </div>
    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
        <button type="submit" class="btn btn-outline-primary rounded-pill px-4 py-2 d-flex align-items-center shadow-sm">
            <i class="bi bi-box-arrow-right me-2" aria-hidden="true"></i> Logout
        </button>
    </form>
}
else
{
    <div class="auth-buttons d-flex align-items-center">
        <a class="btn btn-outline-primary rounded-pill px-4 py-2 d-flex align-items-center me-3" asp-controller="Account" asp-action="Register">
            <i class="bi bi-person-plus me-2" aria-hidden="true"></i> Register
        </a>
        <a class="btn btn-primary rounded-pill px-4 py-2 d-flex align-items-center shadow-sm" asp-controller="Account" asp-action="Login">
            <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i> Login
        </a>
    </div>
}
</div>